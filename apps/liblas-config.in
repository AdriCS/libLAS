#!/bin/sh



usage()
{
	cat <<EOF
Usage: liblas-config [OPTIONS]
Options:
	[--libs]
	[--cflags]
	[--cxxflags]
	[--defines]
	[--includes]
	[--version]
EOF
	exit $1
}

if test $# -eq 0; then
	usage 1 1>&2
fi

case $1 in 
  --libs)
    echo "${LIBS}"
    ;;

  --defines)
    echo 
    ;;

  --includes)
    echo -I${GDAL_INCLUDE_DIR} -I${GEOTIFF_INCLUDE_DIR} -I${LIBXML2_INCLUDE_DIR} -I${ORACLE_INCLUDE_DIR} -I${TIFF_INCLUDE_DIR}
    ;;

  --cflags)
    echo ${CMAKE_C_FLAGS}
    ;;

  --cxxflags)
    echo ${CMAKE_CXX_FLAGS}
    ;;
    
  --version)
    echo ${LIBLAS_VERSION_MAJOR}.${LIBLAS_VERSION_MINOR}.${LIBLAS_VERSION_PATCH}
    ;;

  *)
    usage 1 1>&2
    ;;

esac
